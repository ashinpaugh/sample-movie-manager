{% set id       = movie is defined ? 'movie-' ~ movie.id ~ '-' : '' %}
{% set is_owner = (app.user and movie is defined) and (app.user.id == movie.owner.id) %}

<div class="rating">
    {% for i in 5..1 %}
        <input id="{{ id }}rating-{{ i }}" type="radio" name="rating" value="{{ i }}"{% if movie is defined and movie.rating == i %} checked{% endif %}{% if not is_owner %} disabled{% endif %}>
        <label for="{{ id }}rating-{{ i }}">{{ i }} star</label>
    {% endfor %}
</div>